@page "/EveMails/MyMails"
@using EveMailHelper.Web.Shared.EveMails

<AuthorizeView>
    <NotAuthorized>
        <MudCard>
            <MudText Typo="@Typo.h2" Color="@Color.Error">You are not authorized to be here.</MudText>
            <MudText Typo="@Typo.h4">Rectify this situation by logging in first.</MudText>
        </MudCard>
    </NotAuthorized>
    <Authorized>
        <MudCard>
            <MudCardHeader>
                <MudText Typo="@Typo.h6">InGameInbox</MudText>
            </MudCardHeader>
            <MudCardContent>
                <InGameInbox></InGameInbox>
            </MudCardContent>
        </MudCard>
    </Authorized>
</AuthorizeView>