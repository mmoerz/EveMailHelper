@page "/EveChar/SingleChar/{CharacterId}"
@using EveMailHelper.Shared.EveChar
@using EveMailHelper.Shared.EveChat

<MudCard Elevation="4" Class="mt-4">
    <MudCardHeader>
        <MudText Typo="Typo.h6">Character Details</MudText>
    </MudCardHeader>
    <MudCardContent>
        <CharacterDetails Model="Character" OnCharacterSave="CharacterChanged"></CharacterDetails>
    </MudCardContent>
    <MudCardContent>
        <ChatLogDragnDropUpload Character="Character"></ChatLogDragnDropUpload>
    </MudCardContent>
</MudCard>
<CharacterCommunicationList Character="Character" @ref="CommunicationList"></CharacterCommunicationList>