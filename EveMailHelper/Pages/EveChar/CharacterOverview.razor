@page "/EveChar/CharacterOverview"
@using EveMailHelper.Shared.EveChar;


<MudCard Elevation="4">
    <MudCardHeader>
        <MudText Typo="Typo.h6">Character Overview</MudText>
    </MudCardHeader>
</MudCard>
<CharacterList OnCharacterSelect="CharacterSelected" @ref="ListOfCharacters"></CharacterList>
<MudCard Elevation="4" Class="mt-4">
    <MudCardHeader>
        <MudText Typo="Typo.h6">Character Details</MudText>
    </MudCardHeader>
    <MudCardContent>
        <CharacterDetails  OnCharacterSave="CharacterChanged" @ref="CharDetails"></CharacterDetails>
    </MudCardContent>
</MudCard>