    <MudCardHeader>
        <MudText Typo="Typo.h6">Reaction Overview</MudText>
    </MudCardHeader>
</MudCard>
-->
<MudItem xs="12" sm="6" md="4">
    <MudNumericField @bind-Value="SystemCostIndex" Label="Systemcost Index" Variant="Variant.Filled" Min="0.0" />
</MudItem>

<ReactionList OnBlueprintSelected="BlueprintSelected"></ReactionList>

<MudCard Elevation="4" Class="mt-4">
    <MudCardHeader>
        <MudText Typo="Typo.h6">Reactions</MudText>
    </MudCardHeader>
    <MudCardContent>
        
        <BlueprintDetails 
            Plan="@productionPlan" 
            @ref="ProductionPlanDisplay">
        </BlueprintDetails>
        
    </MudCardContent>
    
</MudCard>
@if (ToBuyList != null && ToBuyList.ItemList.Count() > 0)
{
    <MudCard Elevation="4" Class="mt-4">
        <MudCardHeader>
            <MudText Typo="Typo.h6">BuyList</MudText>
        </MudCardHeader>
        <MudCardContent>
            <BuyListDetails @BList="@ToBuyList">
                <BuyListContent Context="buyList">
                    @foreach (var item in buyList.ItemList)
                    {
                        <MudItem>
                            <MudText>@item.EveType.TypeName</MudText>
                            <MudText>@item.Quantity</MudText>
                        </MudItem>
                    }
                </BuyListContent>
            </BuyListDetails>
        </MudCardContent>
    </MudCard>
}