-->

<MudCard Elevation="4" Class="mt-4">
    <MudCardHeader>
        <MudText Typo="Typo.h6">Reactions</MudText>
    </MudCardHeader>
    <MudCardContent>
        
        <BlueprintDetails 
            Blueprint="@selectedBlueprint" 
            BlueprintName="@selectedBlueprintName" 
            @ref="ListOfComponents">
        </BlueprintDetails>
        
    </MudCardContent>
</MudCard>