<MudForm>
    <div class="d-flex flex-grow-1 gap-4">
        <MudTextField Label="Name"
                      T="string" @bind-Value="@Model.Name"
                      HelperText="Name of the character (yeah i know this is for dummies).">
        </MudTextField>
        <MudTextField Label="Age" Class="flex-none d-flex"
                      T="int?" @bind-Value="@Model.Age"
                      HelperText="Ingame character Age">
        </MudTextField>
        <MudTextField Label="Age in Reality" Class="flex-none d-flex"
                      T="int?" @bind-Value="@Model.ReallifeAge"
                      HelperText="out of game age">
        </MudTextField>
        <MudDatePicker Label="Create Date" @bind-Date="date" HelperText="registered in this tool at this date">
        </MudDatePicker>
    </div>
    <div class="mt-4 d-flex flex-grow-1 gap-4">
        <MudCheckBox Label="Is a recruitee" @bind-Checked="@Model.IsInRecruitment"></MudCheckBox>
        <MudCheckBox Label="Wishes not to be disturbed" @bind-Checked="@Model.IsExcluded"></MudCheckBox>
    </div>
    <MudTextField Label="Description" T="string" @bind-Value="@Model.Description" HelperText="Short summary about this guy/girl.">
    </MudTextField>

    <div class="mt-4 d-flex align-center justify-space-between">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-2">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="false" Class="ml-auto">Save</MudButton>
    </div>
</MudForm>