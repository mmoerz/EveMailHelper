<MudTable Class="mt-4"
          Dense="true"
          Hover="true"
          FixedHeader="true"
          FixedFooter="true"
          ReadOnly="@readOnly"
          OnRowClick="RowClickEvent"
          RowClassFunc="@SelectedRowClassFunc"
          ServerData=@(new Func<TableState, Task<TableData<Note>>>(ServerReload))
          SortLabel="Sortierung"
          T="Note"
          @ref="table">
    <!-- IsEditRowSwitchingBlocked="" -->
    <ToolBarContent>
        <MudText Typo="Typo.h6">Notes List</MudText>
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))"
                      Placeholder="Suche"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Class="mt-0">
        </MudTextField>
    </ToolBarContent>
    <ColGroup>
        <col style="width:50%;" />
        <col style="width:100px" />
        <col />
        <col />
    </ColGroup>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="Title" T="Character">Title</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="CreateDate" T="Character">Create Date</MudTableSortLabel> </MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Title</MudTd>
        <MudTd DataLabel="CreateDate">@context.CreatedDate.ToShortDateString()</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager HidePageNumber="false" />
    </PagerContent>
</MudTable>