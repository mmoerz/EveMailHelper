<style>
    .selected {
        background-color: #1E88E5 !important;
    }

        .selected > td {
            color: white !important;
        }

            .selected > td .mud-input {
                color: white !important;
            }
</style>

<MudTable Dense="true"
          Hover="true"
          FixedHeader="true"
          FixedFooter="true"
          ReadOnly="@readOnly"
          OnRowClick="RowClickEvent"
          RowClassFunc="@SelectedRowClassFunc"
          ServerData=@(new Func<TableState, Task<TableData<EVEStandard.Models.MarketOrder>>>(ServerReload))
          SortLabel="Sortierung"
          T="EVEStandard.Models.MarketOrder"
          @ref="table">
    <!-- IsEditRowSwitchingBlocked="" -->
    <ToolBarContent>
        <MudText Typo="Typo.h6">Market Order</MudText>
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))"
                      Placeholder="Suche"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Class="mt-0">
        </MudTextField>
    </ToolBarContent>
    <ColGroup>
        <col style="width:40px" />
        <col style="width:100px" />
        <col style="width:220px" />
        <col style="width:220px" />
        <col style="width:100px" />
        <col />
        <col />
    </ColGroup>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="IsBuy" T="EVEStandard.Models.MarketOrder">Is Buy</MudTableSortLabel> </MudTh>
        <MudTh><MudTableSortLabel SortLabel="Price" T="EVEStandard.Models.MarketOrder">Price</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="Issued" T="EVEStandard.Models.MarketOrder">Duration</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="Issued" T="EVEStandard.Models.MarketOrder">Issued</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="Range" T="EVEStandard.Models.MarketOrder">Range</MudTableSortLabel></MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="IsBuy">@context.IsBuyOrder</MudTd>
        <MudTd DataLabel="Price">@context.Price</MudTd>
        <MudTd DataLabel="Duration">@context.Duration</MudTd>
        <MudTd DataLabel="Issued">@context.Issued</MudTd>
        <MudTd DataLabel="Range">@context.Range</MudTd>
        
    </RowTemplate>
    <PagerContent>
        <MudTablePager HidePageNumber="false" />
    </PagerContent>
</MudTable>