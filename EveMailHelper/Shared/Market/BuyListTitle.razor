@using EveMailHelper.DataModels.Market

@if (BuyList is not null)
{
    <MudStack Row="true" Class="" Justify="Justify.SpaceBetween" >
        <MudPaper Class="flex-auto d-flex" Elevation="0">
            <MudText Typo="Typo.h6">BuyList</MudText>
        </MudPaper>
        @if (BuyList.ItemList.Count > 0)
        {
            <MudPaper Class="flex-none d-flex" Elevation="0">
                <MudText Class="ml-2 mt-1">@($"{BuyList.Sum():#,##0.00}") ISK</MudText>
            </MudPaper>
        }
    </MudStack>
}
